<!--Page that shows all the blog posts -->

<% include ./partials/header %>

<h1>Index page!!</h1>

<% blogs.forEach(function(blog){ %>
    <div>
        <h2><%=blog.title%></h2>
        <img src="<%= blog.image %>" >
        <span><%= blog.created.toDateString() %></span>
        <p><%= blog.body.substring(0, 100) %> ...</p> <!-- shows the first 100 char in the description on the home page; click read more to see whole post -->
        <a href="/blogs/<%= blog._id %>">Read More</a>
    </div>
<% }); %>


<% include ./partials/footer %>